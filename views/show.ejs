<%- include("partials/header") %>

<h1><%= campground.name %></h1>

<img src="<%= campground.image %>">
<br><br>
<p>Description: <%= campground.description %></p>

<% campground.comments.forEach(function(comment){ %>
	<p>
		<strong> <%= comment.author %> </strong> - <%= comment.text %>
	</p>
<% }) %>

<form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="form-horizontal" action="" style="width: 50%; margin-top: 10px;">
    <div class="form-group">
      <label class="control-label col-sm-2">Comment:</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="comment[text]"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Author:</label>
      <div class="col-sm-10">
        <input type="author" class="form-control" placeholder="Your Name" name="comment[author]">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Add new Comment</button>
      </div>
    </div>
</form>

<%- include("partials/footer") %>